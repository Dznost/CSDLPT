@using System.Data
@model DataRow

<div class="container mt-5 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-danger text-white"><h4>✏️ Sửa Điểm</h4></div>
        <div class="card-body">
            <form method="post" action="/Home/LuuSuaDiem">
                <div class="mb-3">
                    <label>Sinh Viên:</label>
                    <input type="text" name="masv" class="form-control" value="@Model["MASV"]" readonly />
                </div>
                <div class="mb-3">
                    <label>Môn Học:</label>
                    <input type="text" name="mamh" class="form-control" value="@Model["MAMH"]" readonly />
                </div>

                <div class="mb-3">
                    <label>Điểm số:</label>
                    <input type="number" step="0.1" min="0" max="10" name="diemso" class="form-control fw-bold text-danger" value="@Model["DIEM"]" required />
                </div>

                <button class="btn btn-danger w-100">Lưu Điểm Mới</button>
                <a href="/Home/Diem" class="btn btn-secondary w-100 mt-2">Hủy</a>
            </form>
        </div>
    </div>
</div>