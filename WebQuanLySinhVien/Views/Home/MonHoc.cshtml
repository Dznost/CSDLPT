@using System.Data
@model DataTable
@{
    string currentSite = ViewBag.CurrentSite;
    bool isViewAll = ViewBag.IsViewAll ?? false;
}

<div class="container mt-4">
    <h2 class="text-center mb-3">📚 QUẢN LÝ MÔN HỌC (Site: @currentSite)</h2>

    <div class="card mb-3 p-2 bg-success bg-opacity-25 border-success">
        <form method="get" action="/Home/MonHoc">
            <div class="form-check form-switch d-flex align-items-center">
                <span class="me-2 fw-bold">Chế độ xem:</span>
                <input class="form-check-input" type="checkbox" id="switchMH" name="all" value="true"
                       @(isViewAll ? "checked" : "") onchange="this.form.submit()">
                <label class="form-check-label fw-bold text-success ms-2" for="switchMH">
                    @(isViewAll ? "🌐 Đang xem: TẤT CẢ MÔN" : "🏠 Đang xem: MÔN KHOA NHÀ")
                </label>
            </div>
        </form>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card p-3 shadow-sm border-success">
                <h5 class="text-success text-center">Thêm Môn Học</h5>
                <hr>
                <form method="post" action="/Home/ThemMonHoc">
                    <div class="mb-2">
                        <label class="fw-bold">Mã Môn</label>
                        <input type="text" name="mamh" class="form-control" placeholder="VD: CSDL" required />
                    </div>
                    <div class="mb-2">
                        <label class="fw-bold">Tên Môn</label>
                        <input type="text" name="tenmh" class="form-control" placeholder="Tên Môn" required />
                    </div>
                    <div class="mb-3">
                        <label class="fw-bold">Khoa Quản Lý</label>
                        <select name="makh" class="form-select">
                            <option value="CNTT">CNTT</option>
                            <option value="VT">Viễn Thông</option>
                            <option value="KT">Kinh Tế</option>
                        </select>
                    </div>
                    <button class="btn btn-success w-100">💾 Lưu Môn</button>
                </form>
            </div>
        </div>

        <div class="col-md-8">
            <table class="table table-bordered text-center align-middle">
                <thead class="table-success">
                    <tr>
                        <th>Mã MH</th>
                        <th>Tên Môn Học</th>
                        <th>Khoa</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                        <tr>
                            <td>@row["MAMH"]</td>
                            <td>@row["TENMH"]</td>
                            <td><span class="badge bg-success">@row["MAKH"]</span></td>
                            <td>
                                <div class="d-flex justify-content-center gap-2">
                                    <a href="/Home/SuaMonHoc?id=@row["MAMH"]" class="btn btn-warning btn-sm">✏️ Sửa</a>
                                    <form method="post" action="/Home/XoaMonHoc" onsubmit="return confirm('Xóa môn này?');">
                                        <input type="hidden" name="mamh" value="@row["MAMH"]" />
                                        <input type="hidden" name="makh" value="@row["MAKH"]" />
                                        <button class="btn btn-danger btn-sm">🗑️ Xóa</button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>