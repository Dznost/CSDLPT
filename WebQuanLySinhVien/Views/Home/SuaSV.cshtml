@using System.Data
@model DataRow
@{
    string currentSite = ViewBag.CurrentSite;
}

<div class="container mt-5 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-warning text-dark">
            <h4>✏️ Sửa Sinh Viên: @Model["MASV"]</h4>
        </div>
        <div class="card-body">
            <form method="post" action="/Home/LuuSuaSV">
                <input type="hidden" name="masv" value="@Model["MASV"]" />
                <input type="hidden" name="makh" value="@Model["MAKH"]" />

                <div class="mb-3">
                    <label>Họ Tên:</label>
                    <input type="text" name="hoten" class="form-control" value="@Model["HOTEN"]" required />
                </div>
                <div class="mb-3">
                    <label>Mã Lớp:</label>
                    <input type="text" name="malop" class="form-control" value="@Model["MALOP"]" required />
                </div>
                <div class="mb-3">
                    <label>Khoa:</label>
                    <input type="text" class="form-control" value="@Model["MAKH"]" readonly disabled />
                </div>

                <button class="btn btn-warning w-100">Lưu Thay Đổi</button>
                <a href="/Home/Index" class="btn btn-secondary w-100 mt-2">Hủy</a>
            </form>
        </div>
    </div>
</div>