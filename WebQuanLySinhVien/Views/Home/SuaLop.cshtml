@using System.Data
@model DataRow

<div class="container mt-5 col-md-6">
    <div class="card shadow">
        <div class="card-header bg-warning"><h4>✏️ Sửa Lớp: @Model["MALOP"]</h4></div>
        <div class="card-body">
            <form method="post" action="/Home/LuuSuaLop">
                <input type="hidden" name="malop" value="@Model["MALOP"]" />
                <input type="hidden" name="makh" value="@Model["MAKH"]" />

                <div class="mb-3">
                    <label>Tên Lớp:</label>
                    <input type="text" name="tenlop" class="form-control" value="@Model["TENLOP"]" required />
                </div>

                <button class="btn btn-warning w-100">Lưu Thay Đổi</button>
                <a href="/Home/Lop" class="btn btn-secondary w-100 mt-2">Hủy</a>
            </form>
        </div>
    </div>
</div>