@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Đăng Nhập Hệ Thống Phân Tán</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
</head>
<body class="bg-light">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white text-center">
                        <h3>ĐĂNG NHẬP</h3>
                    </div>
                    <div class="card-body">
                        <form method="post" action="/Login/Login">

                            <div class="mb-3">
                                <label>Chọn Cơ Sở:</label>
                                <select name="site" class="form-control">
                                    <option value="CNTT">Khoa CNTT (Máy Kiên)</option>
                                    <option value="VT">Khoa Viễn Thông (Máy Nhi)</option>
                                    <option value="KT">Khoa Kinh Tế (Máy Bảo)</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label>Tài khoản:</label>
                                <input type="text" name="taikhoan" class="form-control" value="admin" required />
                            </div>
                            <div class="mb-3">
                                <label>Mật khẩu:</label>
                                <input type="password" name="matkhau" class="form-control" value="123" required />
                            </div>

                            @if (ViewBag.Error != null)
                            {
                                <div class="alert alert-danger">@ViewBag.Error</div>
                            }

                            <button class="btn btn-primary w-100">Đăng Nhập</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>